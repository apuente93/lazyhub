<table>
  <thead>
    <tr>
      <th>Points</th>
      <th></th>
      <th></th>
      <th>Views</th>
      <th>Best of the Best</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.upvote %></td>
        <td><%= link_to image_tag("upvote_48.png", :alt => "rss feed"), points_article_path(article.id), method: :post %></td>
        <td><%= link_to image_tag("downvote_48.png", :alt => "rss feed"), downvote_article_path(article.id), method: :post %></td>
        <td><%= article.views %></td>
        <td id = "content_column",  onclick="location.href='<%= article.content %>'"><%= link_to article.article_type, article, {:style=>'color: black;', :class => "article_type"} %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Article', new_article_path %>