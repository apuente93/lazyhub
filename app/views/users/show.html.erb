  <div class="span6">
      <h3 class="sign_up2">Favorite Articles (<%= @favorite_articles.total_entries %>)</h3>
      <ol class="user_favorites">
        <% @favorite_articles.each do |favorite_article| %>
          <li>
            <span class="content"><% if favorite_article.title.squish.length >= 35 %><%= link_to favorite_article.title.squish[0...35] + "...", favorite_article.content %><% else %><%= link_to favorite_article.title, favorite_article.content %><% end %></span>
            <span class="timestamp">
            Liked <%= time_ago_in_words(favorite_article.created_at) %> ago.
            </span>
            <div>
              <% if current_user?(favorite_article.user) %>
              <%= link_to "delete", favorite_article, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: favorite_article.content %>
              <% end %>
            </div>
          </li>
        <% end %>
        <%= will_paginate @favorite_articles, :param_name => 'favorite_articles_page',:page_links => false %>
      </ol>
  </div>

  <div class="span6">
      <h3 class="sign_up2">Comments (<%= @comments.total_entries %>)</h3>
      <ol class="user_comments">
        <% @comments.each do |comment| %>
          <li>
            <span class="content"><%= comment.content %></span>
            <span class="timestamp">
            Posted <%= time_ago_in_words(comment.created_at) %> ago to <% if Article.find_by_id(comment.article_id).title.length >= 35 %><%= link_to Article.find_by_id(comment.article_id).title.squish[0...35] + "...", Article.find_by_id(comment.article_id) %><% else %><%= link_to Article.find_by_id(comment.article_id).title, Article.find_by_id(comment.article_id) %><% end %>.
            </span>
            <div>
              <% if current_user?(comment.user) %>
              <%= link_to "delete", comment, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: comment.content %>
              <% end %>
            </div>
          </li>
        <% end %>
        <%= will_paginate @comments, :param_name => 'comments_page',:page_links => false %>
      </ol>
  </div>
