<h1>Listing funnies</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Article</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @funnies.each do |funny| %>
      <tr>
        <td><%= funny.content %></td>
        <td><%= funny.article %></td>
        <td><%= link_to 'Show', funny %></td>
        <td><%= link_to 'Edit', edit_funny_path(funny) %></td>
        <td><%= link_to 'Destroy', funny, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

