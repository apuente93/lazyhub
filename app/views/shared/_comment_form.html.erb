<%= form_for(@comment) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new comment..." %>
  </div>
  <%= hidden_field_tag(:article_id, @article.id) %>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>