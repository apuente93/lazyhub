<div class="sign_in_up_box">
<div class="row">
<div class="span6 forms">
<h3 class="sign_up2">New Article</h3>
<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_area :title %>
  </div>
  <div class= "field">
    <%= f.label "Source" %>
    <%= f.select :image_tag, options_for_select(%w[CNN reddit Ebaumsworld ESPN GOAL 9gag Collegehumor AddictingGames Miniclip Cnet PCmag Buzzfeed EntertainmentWeekly digg YouTube]), :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label "Link" %>
    <%= f.text_area :content %>
  </div>
  <div class= "field">
    <%= f.label :article_type %>
    <%= f.select :article_type, options_for_select(%w[Laugh Game News Tech Social Sports Random]), :include_blank => true %>
  </div>
  <div class="actions">
    <%= f.submit "Create New Article", class: "btn btn-md btn-primary center-block" %>
  </div>
<% end %>
</div>
</div>
</div>
