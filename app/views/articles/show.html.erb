<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/comment_form' %>
      </section>
    </aside>
    <div class="span8">
    <% if @article.comments.any? %>
      <h3>Comments (<%= @article.comments.count %>)</h3>
      <ol class="comments">
        <%= render @comments %>
      </ol>
      <%= will_paginate @comments %>
    <% end %>
    </div>
</div>
<% else %>
<div class="span8">
    <% if @article.comments.any? %>
      <h3>Comments (<%= @article.comments.count %>)</h3>
      <ol class="comments">
        <%= render @comments %>
      </ol>
      <%= will_paginate @comments %>
    <% end %>
  </div>
</div>
<% end %>