<% provide(:title, @article.title) %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/comment_form' %>
      </section>
    </aside>
    <div class="span8">
    <% if @article.comments.any? %>
      <h3><%= link_to @article.title, views_article_path(@article.id), {:style=>'color: black;', :class => "article_type", method: :post} %></h3>
      <ol class="comments">
        <%= render @comments %>
      </ol>
      <%= will_paginate @comments %>
      <% else %>
      <h2 class = "bg-danger">There are currently no comments for this article.</h2>
      <h2 class = "bg-danger"><%= link_to @article.title, views_article_path(@article.id), {:style=>'color: black;', :class => "article_type", method: :post} %></h2>
    <% end %>
    </div>
</div>
<% else %>
<div class="span8">
    <% if @article.comments.any? %>
      <h3><%= link_to @article.title, views_article_path(@article.id), {:style=>'color: black;', :class => "article_type", method: :post} %></h3>
      <ol class="comments">
        <%= render @comments %>
      </ol>
      <%= will_paginate @comments %>
    <% end %>
  </div>
</div>
<% end %>