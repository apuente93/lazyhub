<% provide(:title, 'Contact') %>
<h1 class="sign_up2">Contact Us</h1>

<div class="row">
  <div class="span6 offset4">
    <%= form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, class: "labels" %>
      <%= f.text_field :name %>

      <%= f.label :email, class: "labels" %>
      <%= f.text_field :email %>

      <%= f.label :message, class: "labels" %>
      <%= f.text_area :message, :rows => "10" %>
      <%= f.submit "Send Message", class: "btn btn-large btn-primary center-block2" %>
    <% end %>
  </div>
</div>